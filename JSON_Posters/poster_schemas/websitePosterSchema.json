{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "url", "title"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["website"],
      "description": "Type identifier for website posters"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL of the website"
    },
    "title": {
      "type": "string",
      "description": "Title of the website"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the website"
    },
    "thumbnail": {
      "type": "string",
      "description": "Path to a thumbnail image for the website (optional)"
    }
  }
}
