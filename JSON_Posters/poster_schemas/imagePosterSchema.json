{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "imagePath"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["image"],
      "description": "Type identifier for image posters"
    },
    "imagePath": {
      "type": "string",
      "description": "Path to the image file"
    },
    "title": {
      "type": "string",
      "description": "Optional title for the image"
    },
    "description": {
      "type": "string",
      "description": "Optional descriptive text for the image's back side"
    },
    "alt": {
      "type": "string",
      "description": "Alternative text for accessibility (defaults to filename if not provided)"
    },
    "annotations": {
      "type": "array",
      "description": "Optional annotations for specific parts of the image",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "description": "Annotation text"
          },
          "position": {
            "type": "object",
            "description": "Optional positioning information",
            "properties": {
              "x": {
                "type": "number",
                "description": "X coordinate (percentage of image width)"
              },
              "y": {
                "type": "number",
                "description": "Y coordinate (percentage of image height)"
              }
            }
          }
        }
      }
    }
  }
}
